# Environment Variable Configuration
# Copy this file to .env.local and fill in your values

# Environment (development, staging, production)
NODE_ENV=development
VERCEL_ENV=development

# Development Environment Variables
# These are used when NODE_ENV=development or no environment prefix is found

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_PROJECT_ID=your_supabase_project_id_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Staging Environment Variables
# These are used when VERCEL_ENV=preview or NODE_ENV=staging

STAGING_SUPABASE_URL=your_staging_supabase_url_here
STAGING_SUPABASE_ANON_KEY=your_staging_supabase_anon_key_here
STAGING_SUPABASE_SERVICE_KEY=your_staging_supabase_service_key_here
STAGING_SUPABASE_PROJECT_ID=your_staging_supabase_project_id_here

STAGING_STRIPE_SECRET_KEY=sk_test_your_staging_stripe_secret_key_here
STAGING_STRIPE_WEBHOOK_SECRET=whsec_your_staging_stripe_webhook_secret_here

STAGING_NEXT_PUBLIC_APP_URL=https://staging.petmeds.app

# Production Environment Variables
# These are used when VERCEL_ENV=production or NODE_ENV=production

PROD_SUPABASE_URL=your_production_supabase_url_here
PROD_SUPABASE_ANON_KEY=your_production_supabase_anon_key_here
PROD_SUPABASE_SERVICE_KEY=your_production_supabase_service_key_here
PROD_SUPABASE_PROJECT_ID=your_production_supabase_project_id_here

PROD_STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key_here
PROD_STRIPE_WEBHOOK_SECRET=whsec_your_production_stripe_webhook_secret_here

PROD_NEXT_PUBLIC_APP_URL=https://petmeds.app

# Deployment Configuration (for CI/CD)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here